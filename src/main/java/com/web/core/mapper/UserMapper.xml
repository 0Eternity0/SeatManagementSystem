<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.web.core.mapper.UserMapper">

    <insert id="insertUser" parameterType="user">
        insert into data (name, password) values (#{username},#{password})
    </insert>

    <select id="selectUser" parameterType="user" resultType="user">
        select * from data where name=#{username} and password=#{password}
    </select>

    <delete id="deleteUser" parameterType="user">
        delete from data where name=#{username}
    </delete>

    <update id="updateUser" parameterType="user">
        update data set password=#{password} where name=#{username}
    </update>

</mapper>
